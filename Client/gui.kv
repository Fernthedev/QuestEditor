#:kivy 2.0.0

#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<ScrollView>:
    effect_cls: ScrollEffect

<TextInput>:
    multiline: False

<PaddingCell>:
    anchor_x: "center"
    anchor_y: "center"
    size_hint_min_x: self.padding_horizontal * 2
    size_hint_min_y: self.padding_vertical * 2

<CompactLabel>:
    size: self.texture_size[0] + 10, self.texture_size[1] + 5
    color: 0, 0, 0

<FieldInput>:
    width: 100

<MethodCell>:
    height: 30
    orientation: "lr-tb"
    Button:
        id: run_button
        width: 50
        text: "Run"

<ClassDisplay>:
    orientation: "tb-lr"
    content: content_area
    # class name and dropdown button
    ExpandingStack:
        orientation: "lr-tb"
        height: 40
        PaddingCell:
            size: 40, 40
            Button:
                id: expand_button
                text: "-"
        CompactLabel:
            id: class_name
            text: "Class name - ex. GameObject"
    # content area
    ExpandingStack:
        id: content_area
        orientation: "tb-lr"

<MainWidget>:
    # background
    canvas:
        Color:
            rgb: 0.9, 0.9, 0.9
        Rectangle:
            pos: self.pos
            size: self.size
    # main window
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.8
        # top bar
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50
            pos_hint: {"top": 1}
            PaddingCell:
                padding_vertical: 10
                TextInput:
                    id: ip_input
                    text: "192.168.7.28:3306"
                    hint_text: "IP"
                    on_text_validate: root.connect()
            PaddingCell:
                padding_vertical: 9
                Button:
                    id: connect_button
                    text: "Connect"
                    on_press: root.connect()
        # method area
        ScrollView:
            ExpandingStack:
                id: methods
                orientation: "tb-lr"
                ClassDisplay:
                    MethodCell:
                        CompactLabel:
                            text: "return type"
                        CompactLabel:
                            text: "method name"
